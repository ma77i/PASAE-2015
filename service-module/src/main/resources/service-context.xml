<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:dao-context.xml" />

	<bean id="espectadorService" class="ar.edu.uai.paradigms.service.EspectadorService">
          <property name="usuarioDAO" ref="usuarioDAO" />
    </bean>
    
    <bean id="empleadoService" class="ar.edu.uai.paradigms.service.EmpleadoService">
          <property name="usuarioDAO" ref="usuarioDAO" />
    </bean>
    
    <bean id="administradorService" class="ar.edu.uai.paradigms.service.AdministradorService">
         <property name="usuarioDAO" ref="usuarioDAO" />
    </bean>
    
    <bean id="ventaService" class="ar.edu.uai.paradigms.service.VentaServiceImpl">
        <constructor-arg ref="ventaDAO" />
    </bean>
    
    <bean id="espectaculoService" class="ar.edu.uai.paradigms.service.EspectaculoServiceImpl">
        <constructor-arg ref="espectaculoDAO" />
    </bean>
        
     <bean id="sectorService" class="ar.edu.uai.paradigms.service.SectorServiceImpl">
        <constructor-arg ref="sectorDAO" />
    </bean> 
    
    <bean id="espectadorService2" class="ar.edu.uai.paradigms.service.EspectadorService" >
      <property name="espectadorDAO" ref="espectadorDAO" />
     </bean>
     
     <bean id="empleadoService2" class="ar.edu.uai.paradigms.service.EmpleadoService">
          <property name="usuarioDAO" ref="empleadoDAO" />
    </bean>
       
     <bean id="administradorService2" class="ar.edu.uai.paradigms.service.AdministradorService" >
      <property name="administradorDAO" ref="administradorDAO" />
      <property name="espectadorService" ref="espectadorService2" />
      <property name="empleadoService" ref="empleadoService2" />
     </bean>  
     
</beans>